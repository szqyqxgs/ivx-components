[
  {
    "name": "openMessagePlugin",
    "locale": {
      "zh": "弹出一条全局提示"
    },
    "desc": {
      "zh": "在当前窗口弹出一条全局提示。"
    },
    "params": [
      {
        "name": "theme",
        "type": "Select",
        "defaultValue": "info",
        "locale": {
          "zh": "风格"
        },
        "desc": {
          "zh": "对应API的theme，默认值：info"
        },
        "optionsEmpty": false,
        "options": [
          "info",
          "success",
          "warning",
          "error",
          "question",
          "loading"
        ],
        "optionLocales": {
          "info": {
            "zh": "信息"
          },
          "success": {
            "zh": "成功"
          },
          "warning": {
            "zh": "警告"
          },
          "error": {
            "zh": "错误"
          },
          "question": {
            "zh": "问题"
          },
          "loading": {
            "zh": "加载"
          }
        }
      },
      {
        "name": "content",
        "type": "Formula",
        "defaultValue": "",
        "locale": {
          "zh": "提示内容"
        },
        "desc": {
          "zh": "合法值：任意字符串；对应API的content，默认值：-"
        },
        "placeholder": "任意字符串"
      },
      {
        "name": "duration",
        "type": "Formula",
        "defaultValue": "3000",
        "locale": {
          "zh": "自动关闭延时"
        },
        "desc": {
          "zh": "单位：毫秒，值为 0 则不自动关闭；对应API的duration，建议使用默认值：3000"
        },
        "placeholder": "任意非负整数"
      }
    ]
  },
  {
    "name": "closeAll",
    "locale": {
      "zh": "关闭所有全局提示"
    },
    "desc": {
      "zh": "关闭当前窗口的所有全局提示。"
    }
  },
  {
    "name": "closeFirst",
    "locale": {
      "zh": "关闭最先弹出的一条全局提示"
    },
    "desc": {
      "zh": "关闭当前窗口最先弹出的一条全局提示。"
    }
  },
  {
    "name": "closeLast",
    "locale": {
      "zh": "关闭最后弹出的一条全局提示"
    },
    "desc": {
      "zh": "关闭当前窗口最后弹出的一条全局提示。"
    }
  }
]